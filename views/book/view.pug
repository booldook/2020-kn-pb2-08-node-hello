doctype html
html(lang="ko")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title= title.head
		link(rel="stylesheet" href="/css/bootstrap.min.css")
		link(rel="stylesheet" href="/css/index.css")
	body
		.wrapper.container
			.title.jumbotron
				h1= title.body
					hr
					small.pl-3= title.small
			.view-wrapper
				.img-wrap
					img.w-100(src=`${book.src}`)
				ul.cont-wrap
					li.list
						.title 제목
						.content= book.title
					li.list
						.title 저자
						.content= book.writer
				.detail-wrap= book.content
			.bt-wrapper.py-3.text-center
				button.btn.btn-primary(onclick="location.href='/list';") 리스트